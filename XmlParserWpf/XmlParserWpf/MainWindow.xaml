    <Window x:Class="XmlParserWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlParserWpf"
        xmlns:tracerResItems="clr-namespace:TracerLibXmlParser;assembly=TracerLibXmlParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="424.038" Width="371" Name="mainWindow">
        
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.Exit" CanExecute="Exit_OnCanExecute" Executed="Exit_OnExecuted" />
        <CommandBinding Command="local:CustomCommands.Open" CanExecute="Open_OnCanExecute" Executed="Open_OnExecuted" />
        <CommandBinding Command="local:CustomCommands.Close" CanExecute="Close_OnCanExecute" Executed="Close_OnExecuted" />
        <!-- TODO: more CommandBindings -->
    </Window.CommandBindings>
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Name="FileMenu" Header="File">
                <MenuItem Name="OpenFileMenuItem" Header="Open" Command="local:CustomCommands.Open"/>
                <!-- TODO: more FileMenuItems -->
                <MenuItem Name="CloseFileMenuItem" Header="Close" Command="local:CustomCommands.Close"/>
                <Separator />
                <MenuItem Name="ExitFileMenuItem" Header="Exit" Command="local:CustomCommands.Exit"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Name="FileTabs" SelectedIndex="{Binding ElementName=mainWindow, Path=FilesList.SelectedIndex}">
            <TabControl.ItemsSource>
                <Binding ElementName="mainWindow" Path="FilesList"/>
            </TabControl.ItemsSource>

            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:FilesViewModel}">
                    <TextBlock Text="{Binding Path=Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TreeView x:Name="FileTree" DataContext="{Binding ElementName=mainWindow, Path=FilesList.SelectedFile}" ItemsSource="{Binding ThreadsList}">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type tracerResItems:ThreadsListItem}" ItemsSource="{Binding Methods}">
                                    <TextBlock Text="{Binding Path=AsString}"></TextBlock>
                                </HierarchicalDataTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type tracerResItems:MethodsListItem}" ItemsSource="{Binding Nested}">
                                    <TextBlock Text="{Binding Path=AsString}"></TextBlock>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </DockPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
            
        </TabControl>
        
    </Grid>
</Window>
